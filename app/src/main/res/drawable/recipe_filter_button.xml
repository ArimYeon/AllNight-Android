<?xml version="1.0" encoding="utf-8"?>
<ripple xmlns:android="http://schemas.android.com/apk/res/android" android:color="#9e8864">
    <item>
        <selector>
            <item android:state_checked="true">
                <shape android:shape="rectangle">
                    <corners android:radius="20dp" />
                    <solid android:color="@color/button_backg" />
                </shape>
            </item>

            <item>
                <shape android:shape="rectangle">
                    <corners android:radius="20dp" />
                    <stroke android:color="@color/button_backg"
                            android:width="1dp"/>
                    <solid android:color="@android:color/white" />
                </shape>
            </item>
        </selector>
    </item>
</ripple>