<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                                   xmlns:app="http://schemas.android.com/apk/res-auto"
                                                   xmlns:tools="http://schemas.android.com/tools"
                                                   android:layout_width="match_parent"
                                                   android:layout_height="match_parent" android:background="#00FFFFFF">


    <ImageView android:layout_width="157dp"
               android:layout_height="200dp"
               android:id="@+id/tvMainTodayTitle"
               android:height="300dp"
               android:src="@drawable/img_main_concept" android:background="#0b0c15"
               app:layout_constraintEnd_toEndOf="parent"
               app:layout_constraintStart_toStartOf="parent" app:layout_constraintTop_toTopOf="parent"
    />
    <CheckBox
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" app:srcCompat="@drawable/ic_normal_"
            android:id="@+id/scrap_button"
            android:background="#00FFFFFF" app:layout_constraintEnd_toEndOf="@+id/tvMainTodayTitle"
            android:layout_marginEnd="7dp"
            app:layout_constraintTop_toTopOf="@+id/tvMainTodayTitle"
            android:button="@drawable/myscrap"/>
    <ImageButton
            android:layout_width="18dp"
            android:layout_height="18dp" app:srcCompat="@drawable/ic_24"
            android:id="@+id/imageButton2" android:background="#00FFFFFF"
            app:layout_constraintStart_toStartOf="@+id/tvMainTodayTitle" android:layout_marginStart="5dp"
            android:layout_marginBottom="2dp" app:layout_constraintBottom_toTopOf="@+id/name_text"/>
    <TextView
            android:text="Bijou"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/name_text" android:textSize="20sp"
            android:textAppearance="@style/TextAppearance.AppCompat.Body2" android:textColor="#ffffff"
            android:layout_marginStart="7dp" app:layout_constraintStart_toStartOf="@+id/tvMainTodayTitle"
            android:layout_marginBottom="13dp" app:layout_constraintBottom_toBottomOf="@+id/tvMainTodayTitle"/>

</androidx.constraintlayout.widget.ConstraintLayout>