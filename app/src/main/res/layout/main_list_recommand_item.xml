<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                                   xmlns:app="http://schemas.android.com/apk/res-auto"
                                                   xmlns:tools="http://schemas.android.com/tools"
                                                   android:layout_width="match_parent"
                                                   android:layout_height="480dp">
    <com.mashup.allnight.customview.WebImageView android:layout_width="0dp"
               android:layout_height="406dp"
               android:id="@+id/tvMainTodayTitle"
               android:height="300dp"
               android:background="@drawable/img_main_concept"
               app:layout_constraintEnd_toEndOf="parent"
               app:layout_constraintStart_toStartOf="parent" app:layout_constraintTop_toTopOf="parent"
               android:layout_marginStart="16dp" android:layout_marginEnd="16dp"/>

    <ImageView
            android:id="@+id/imageView4"
            android:layout_width="175dp"
            android:layout_height="26dp"
            android:layout_marginTop="46dp"
            app:layout_constraintEnd_toEndOf="@+id/tvMainTodayTitle"
            app:layout_constraintStart_toStartOf="@+id/tvMainTodayTitle"
            app:layout_constraintTop_toTopOf="@+id/tvMainTodayTitle"
            app:srcCompat="@drawable/ic_textimg" />
    <TextView
            android:text="Recipe"
            android:layout_width="0dp"
            android:layout_height="23dp"
            android:id="@+id/recipe_text" android:textSize="20sp"
            android:textAppearance="@style/TextAppearance.AppCompat.Display2" android:textColor="#d3ba91"
            app:layout_constraintTop_toBottomOf="@+id/tvMainTodayTitle" android:layout_marginTop="48dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="16dp"/>
    <View
            android:background="#d3ba91"
            android:layout_width="0dp"
            android:layout_height="1dp"
            app:layout_constraintTop_toBottomOf="@+id/tvMainTodayTitle"
            android:layout_marginTop="59dp" app:layout_constraintStart_toEndOf="@+id/recipe_text"
            android:layout_marginStart="4dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="16dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>