<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".Login2Activity" android:background="@color/backgound">

    <TextView
            android:text="@string/first_page_no_thanks"
            android:layout_width="328dp"
            android:layout_height="52dp"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent"
            android:id="@+id/no_button" app:layout_constraintHorizontal_bias="0.506"
            android:layout_marginBottom="40dp" app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginStart="16dp" android:layout_marginEnd="16dp"
            android:background="#0b0c15"
            android:shadowColor="#ffffff"
            android:textColor="#ffffff"
            android:textAlignment="center"
            android:gravity="center"
            android:clickable="true"
            android:focusable="true"
            android:fontFamily="@font/nanumbarungothic"/>
    <Button
            android:text="@string/first_page_yes_please"
            android:layout_width="328dp"
            android:layout_height="52dp"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent"
            android:id="@+id/yes_button" android:layout_marginBottom="16dp"
            app:layout_constraintBottom_toTopOf="@+id/no_button" android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp" android:backgroundTint="@color/button_backg"
            android:background="@drawable/ic_9_patch" android:textColor="#ffffff"
            android:fontFamily="@font/nanumbarungothicbold" android:textSize="19sp"/>
    <TextView
            android:text="@string/first_page_description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent"
            android:id="@+id/textView" android:textSize="20sp" android:textColor="#FFFFFF"
            android:textAlignment="center"
            android:layout_marginStart="16dp" android:layout_marginEnd="16dp" android:layout_marginTop="30dp"
            app:layout_constraintTop_toBottomOf="@+id/imageView2"
            android:fontFamily="@font/nanumbarungothic"/>
    <ImageView
            android:layout_width="0dp"
            android:layout_height="250dp"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="75dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="23dp" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="23dp" android:id="@+id/imageView2"
            android:background="@drawable/img_onboarding"/>
</androidx.constraintlayout.widget.ConstraintLayout>